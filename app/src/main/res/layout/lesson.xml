<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/task_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fon_kidsroom"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />



    <ImageView
        android:id="@+id/pers_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/jess"
        android:scaleType="fitEnd"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/pers_minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ellie"
        android:scaleType="fitEnd"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />



    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:gravity="top|left"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/btn_back_task2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_black95_press_black50"
                android:fontFamily="@font/alegreya_sans_light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="â†"
                android:textColor="@color/white"
                android:textSize="43sp" />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/container6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/name_text_style"
                android:fontFamily="@font/anonymous_pro_bold_italic"
                android:padding="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:shadowColor="@color/white"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="10"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/task_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_style"
                android:fontFamily="@font/alegreya_sans_light"
                android:padding="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="some text"
                android:textColor="@color/black95"
                android:textSize="20sp"
                android:visibility="visible"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_var1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/var_btn_style"
                android:fontFamily="@font/alegreya_sans_light"
                android:text="option 1"
                android:textAllCaps="false"
                android:textColor="@color/black95"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btn_var2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/var_btn_style"
                android:fontFamily="@font/alegreya_sans_light"
                android:text="option 2"
                android:textAllCaps="false"
                android:textColor="@color/black95"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_var3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/var_btn_style"
                android:fontFamily="@font/alegreya_sans_light"
                android:text="option 3"
                android:textAllCaps="false"
                android:textColor="@color/black95"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />



        </LinearLayout>
    </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>