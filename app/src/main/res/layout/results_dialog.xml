<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_back"
    android:background="@drawable/results_dialog"
    android:layout_gravity="center"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:paddingTop="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Your result: "
            android:fontFamily="@font/alegreya_sans_light"
            android:textAllCaps="false"
            android:textColor="@color/black95"
            android:textSize="26dp">
        </TextView>
        <TextView
            android:id="@+id/correctNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="20"
            android:fontFamily="@font/alegreya_sans_light"
            android:textAllCaps="false"
            android:textColor="@color/black95"
            android:textSize="26dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:fontFamily="@font/alegreya_sans_light"
            android:textAllCaps="false"
            android:textColor="@color/black95"
            android:textSize="26dp">
        </TextView>
        <TextView
            android:id="@+id/maxNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="20"
            android:fontFamily="@font/alegreya_sans_light"
            android:textAllCaps="false"
            android:textColor="@color/black95"
            android:textSize="26dp">
        </TextView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Continue"
        android:fontFamily="@font/alegreya_sans_light"
        android:textAllCaps="false"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/button_black95_press_black50">
    </Button>

</LinearLayout>